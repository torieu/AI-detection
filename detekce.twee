/*======================
    <a> hyperlinks
======================*/

.hyper {
    color: hsl(170, 98%, 40%);
    text-decoration: underline;
    transition-property: color, underline, text-shadow;
}
.hyper:hover {
    color: hsl(170, 90%, 46%);
    text-shadow: hsl(170, 90%, 46%) 0 0 0.5px;
    text-decoration-thickness: 1.5px;
}
.hyper:visited {
    color: hsl(182, 100%, 27%);
    text-decoration: underline;
    transition-property: color, underline, text-shadow;
}
.hyper:visited:hover {
    color: hsl(182, 100%, 22%);
    text-shadow: hsl(182, 100%, 22%) 0 0 0.5px;
    text-decoration-thickness: 1.5px;
}





/*============================
    Images and such
============================*/

.imbox {
    max-width: 100%;
    display: block;
    margin: 0 auto;
}

/* images shadow */
.imbox img,
img.cimage,
.modalDialog div img,
.modalDialog div iframe {
    box-shadow: -1px 3px 6px 1px rgba(0, 0, 0, 0.3);
}

.inlimg {
    width: auto;
    max-width: 100%;
    display: block;
    margin: 0 auto;
}

.cimage {
    max-width: 100%;
    max-height: 20em;
    /* width: 570px; */
    display: block;
}

tw-passage[tags ~= "examples"] a img,
a.hyper img {
    border: solid 0.2em;
    transition: 300ms;
    transition-property: border, transform;
}
tw-passage[tags ~= "examples"] a img:hover,
a.hyper img:hover {
    transform: scale(1.02);
    z-index: 2;
}

tw-passage[tags ~= "examples"] a img {
    border-color: rgb(0, 179, 30);
}
tw-passage[tags ~= "examples"] a img:hover {
    border-color: rgb(0, 146, 24);
}

a.hyper img {
    border-color: hsl(170, 98%, 40%);
}
a.hyper img:hover {
    border-color: hsl(170, 90%, 46%);
}
a.hyper img {
    display: inline-block;
    margin: 1%;
    width: 47%;
    max-width: 13em;
}

a.book-modal-init {
    display: block;
    width: max-content;
}


/*==========================
    Progress bar
==========================*/

div.progress-bar {
    height: 0.6em;
    width: 100%;
    background-color: #ebf0ff;
}
div.progress-bar-bar {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    
    background-color: #ced9ff;
}

div.progress-bar::after {
    /* color: rgb(85, 85, 85); */
    content: attr(data-value) "/48";

    position: absolute;
    top: -70%;
    left: 0;
    
    height: 200%;
    width: 100%;
    text-align: center;
}




