    color: rgb(0, 179, 30);
    transition: 300ms;
    transition-property: color, underline, text-shadow;
    text-decoration: underline;
}
a.inmod:any-link:hover,
.modbut:any-link:hover {
    color: rgb(0, 134, 22);
    text-shadow: rgb(0, 134, 22) 0 0 0.5px;
    text-decoration: underline;
    text-decoration-thickness: 1.5px;
}


